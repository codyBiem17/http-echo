apiVersion: apps/v1
kind: Deployment
metadata:
  name: deploy-chart
  labels:
    app: goapp-isw
spec:
  replicas: {{ .Values.replicaCount}}
  selector:
    matchLabels:
      app: goapp-isw
  template:
    metadata:
      labels:
        app: goapp-isw
    spec:
      containers:
      - name: nginx
        image: nginx:1.14.2
        ports:
        - containerPort: 80


